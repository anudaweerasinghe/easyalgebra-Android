<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuda.mathapp.quadratics.QuadraticEquationsActivity">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:text="Solve for x"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@id/title_text"
        android:textSize="40dp"
        android:text="ax² + bx = c"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x₁ = "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/ansTextX1"
        android:layout_alignBottom="@+id/ansTextX1"
        android:layout_toStartOf="@+id/ansTextX1" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x₂ = "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/ansTextX2"
        android:layout_alignBottom="@+id/ansTextX2"
        android:layout_toStartOf="@+id/ansTextX2" />


    <EditText
        android:id="@+id/ansTextX1"
        android:layout_width="250dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:ems="15"
        android:inputType="text"
        android:hint="@string/answer_hint"/>

    <EditText
        android:id="@+id/ansTextX2"
        android:layout_width="250dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ansTextX1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="42dp"
        android:ems="15"
        android:inputType="text"
        android:hint="@string/answer_hint"/>


    <Button
        android:id="@+id/nextBtn"
        android:layout_width="150dp"
        android:paddingHorizontal="20dp"
        android:layout_height="40dp"
        android:text="NEXT"
        android:textColor="#FFFF"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/ansTextX2" />


</RelativeLayout>
