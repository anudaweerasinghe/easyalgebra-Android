<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuda.mathapp.linearalgebra.SimultEqnsActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:text="Solve for x and y"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@id/title_text"
        android:textSize="40dp"
        android:text="ax + by = c\ndx + ey = f"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x = "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/ansTextx"
        android:layout_alignBottom="@+id/ansTextx"
        android:layout_toStartOf="@+id/ansTextx" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y = "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/ansTexty"
        android:layout_alignBottom="@+id/ansTexty"
        android:layout_toStartOf="@+id/ansTexty" />


    <EditText
        android:id="@+id/ansTextx"
        android:layout_width="250dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:ems="15"
        android:inputType="text"
        android:hint="Answer to two decimal places"/>

    <EditText
        android:id="@+id/ansTexty"
        android:layout_width="250dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ansTextx"
        android:layout_alignParentRight="true"
        android:layout_marginTop="42dp"
        android:ems="15"
        android:inputType="text"
        android:hint="Answer to two decimal places"/>


    <Button
        android:id="@+id/nextBtn"
        android:layout_width="150dp"
        android:paddingHorizontal="20dp"
        android:layout_height="40dp"
        android:text="NEXT"
        android:textColor="#FFFF"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/ansTexty" />


</RelativeLayout>
